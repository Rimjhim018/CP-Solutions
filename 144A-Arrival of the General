
#include<bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> a(n);
    for(int i=0;i<n;i++) cin >> a[i];

    int idxMax=0, idxMin=0, maxH=a[0], minH=a[0];

    for(int i=0;i<n;i++){
        if(a[i]>maxH){ maxH=a[i]; idxMax=i; }
        if(a[i]<=minH){ minH=a[i]; idxMin=i; }
    }

    int swaps = idxMax + (n-1 - idxMin);
    if(idxMax > idxMin) swaps--;
    cout << swaps;
    return 0;
}

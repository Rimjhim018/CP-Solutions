#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while(t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        for(int i = 0; i < n; i++) cin >> a[i];

        int mn = 1, mx = n;
        int L = -1, R = -1;

        for(int i = 0; i < n; i++) {
            if(a[i] == mn) L = i;
            if(a[i] == mx) R = i;
        }

        if(L > R) swap(L, R);

        int ans1 = R + 1;
        int ans2 = n - L;
        int ans3 = (L + 1) + (n - R);
        
        cout << min({ans1, ans2, ans3}) << "\n";
    }
}

#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while(t--) {
        int n;
        cin >> n;

        vector<long long> a(n), b(n);
        for(int i = 0; i < n; i++) cin >> a[i];
        for(int i = 0; i < n; i++) cin >> b[i];

        long long L = 0, R = 0;

        for(int i = 0; i < n; i++) {
            long long newL = min(L - a[i], b[i] - R);
            long long newR = max(R - a[i], b[i] - L);
            L = newL;
            R = newR;
        }

        cout << R << "\n";
    }

    return 0;
}

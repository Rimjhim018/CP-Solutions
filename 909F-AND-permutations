#include <bits/stdc++.h>
using namespace std;

bool isPow2(int n){
    return (n & (n-1)) == 0;
}

int main(){
    int N;
    cin >> N;

    if(!isPow2(N)){
        cout << "NO\n";
    } else {
        cout << "YES\n";
        vector<int> p(N+1);
        for(int len=1; len<=N; len<<=1){
            for(int i=1; i<=N; i+=len<<1){
                for(int j=0; j<len; j++){
                    if(i+j+len <= N){
                        p[i+j] = i+j+len;
                        p[i+j+len] = i+j;
                    }
                }
            }
        }
        for(int i=1;i<=N;i++) cout << p[i] << " ";
        cout << "\n";
    }

    if(N == 1 || N == 3){
        cout << "NO\n";
        return 0;
    }

    cout << "YES\n";
    if(N == 2){
        cout << "2 1\n";
        return 0;
    }

    vector<int> q(N+1);
    q[1]=2; q[2]=3; q[3]=1;
    for(int i=4;i<=N;i+=2){
        if(i+1<=N){
            q[i]=i+1;
            q[i+1]=i;
        }
    }
    for(int i=1;i<=N;i++) cout << q[i] << " ";
    cout << "\n";
    return 0;
}

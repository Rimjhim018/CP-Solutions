#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> t(n);
    for (int i = 0; i < n; i++) cin >> t[i];

    int l = 0, r = n - 1;
    long long A = 0, B = 0;
    int cntA = 0, cntB = 0;

    while (l <= r) {
        if (A <= B) {
            A += t[l];
            l++;
            cntA++;
        } else {
            B += t[r];
            r--;
            cntB++;
        }
    }

    cout << cntA << " " << cntB << "\n";
    return 0;
}

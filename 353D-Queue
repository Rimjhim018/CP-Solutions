#include <bits/stdc++.h>
using namespace std;

int main() {
    string s;
    cin >> s;
    int n = s.size();
    int seconds = 0;
    while (true) {
        bool changed = false;
        for (int i = 0; i < n - 1; i++) {
            if (s[i] == 'M' && s[i + 1] == 'F') {
                swap(s[i], s[i + 1]);
                i++;
                changed = true;
            }
        }
        if (!changed) break;
        seconds++;
    }
    cout << seconds << endl;
    return 0;
}

#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    string s;
    cin >> n >> s;

    int count = 0, res = 0;
    for(char c : s){
        if(c == 'x'){
            count++;
            if(count >= 3) res++; 
        } else {
            count = 0; 
        }
    }

    cout << res << endl;
    return 0;
}
